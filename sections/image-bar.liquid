<!-- src/static/sections/image-bar.liquid -->
{%- assign block_height = section.settings.section_height -%}
<div
	class="flex md:flex-row flex-col overflow-hidden">
	{% case section.blocks.size %}
		{% when 1 %}
			{%- assign column_size = '' -%}
		{% when 2 %}
			{%- assign column_size = 'md:w-1/2' -%}
		{% when 3 %}
			{%- assign column_size = 'md:w-1/3' -%}
		{% else %}
			{%- assign column_size = 'md:w-1/4' -%}
	{% endcase %}

	{% for block in section.blocks %}
		<div class="js {{ column_size }}" {{ block.shopify_attributes }}>
			{% if block.settings.link != blank %}
				<a
					class="block"
					href="{{ block.settings.link }}">
					<div
						class="block bg-no-repeat bg-center bg-cover text-white relative lazyload"
						data-bgset="{% include 'bgset', image: block.settings.image %}"
						data-sizes="auto"
						data-parent-fit="cover"
						style="background-position: {{ block.settings.alignment }};"
						data-image-loading-animation>
			{% elsif block.settings.image != blank %}
				<div
					class="block bg-no-repeat bg-center bg-cover text-white relative lazyload"
					id="{{ block.id }}"
					data-bgset="{% include 'bgset', image: block.settings.image %}"
					data-sizes="auto"
					data-parent-fit="cover"
					style="background-position: {{ block.settings.alignment }};"
					data-image-loading-animation>
			{% else %}
				<div class="block bg-no-repeat bg-center bg-cover text-white">
			{% endif %}
			<div
				class="relative w-full {{ block_height }} {% if block.settings.cta_label != blank or block.settings.link != blank %} image-bar__overlay{% endif %}">
				{% if block.settings.image == blank %}
					{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
				{% endif %}

				{% if block.settings.cta_label != blank %}
					<h3
						class="absolute text-2xl text-white top-50 w-full text-center text-shadow transform -translate-y-1/2"
					>{{ block.settings.cta_label | escape }}</h3>
				{% endif %}
			</div>
			{% if block.settings.link != blank %}
				</div></a>
			{% else %}
				</div>
			{% endif %}
		</div>
		<noscript>
			<div class="{{ column_size }}" {{ block.shopify_attributes }}>
				<div
					id="{{ block.id }}"
					class="block bg-no-repeat bg-center bg-cover text-white"
					style="background-image: url({{ block.settings.image | img_url: '2048x' }});"
				></div>
			</div>
		</noscript>
	{% endfor %}
</div>

{% if section.blocks.size == 0 %}
	{% include 'no-blocks' %}
{% endif %}

{% schema %}
{
	"name": "Gallery",
	"class": "index-section index-section--flush",
	"max_blocks": 4,
	"settings": [
		{
			"type": "select",
			"id": "section_height",
			"label": "Section height",
			"default": "h-88 md:h-120",
			"options": [
				{
					"label": "Extra Small",
					"value": "h-24 md:h-30"
				},
				{
					"label": "Small",
					"value": "h-56 md:h-72"
				},
				{
					"label": "Medium",
					"value": "h-88 md:h-120"
				},
				{
					"label": "Large",
					"value": "h-120 md:h-144"
				},
				{
					"label": "Extra Large",
					"value": "h-128 md:h-160"
				}
			]
		}
	],
	"blocks": [
		{
			"type": "image",
			"name": "Image",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				},
				{
					"type": "select",
					"id": "alignment",
					"label": "Image alignment",
					"default": "center",
					"options": [
						{
							"value": "top",
							"label": "Top"
						},
						{
							"value": "center",
							"label": "Middle"
						},
						{
							"value": "bottom",
							"label": "Bottom"
						}
					]
				},
				{
					"type": "url",
					"id": "link",
					"label": "Link",
					"info": "Optional"
				},
				{
					"type": "text",
					"id": "cta_label",
					"label": "Caption"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Gallery",
			"category": "Image",
			"blocks": [
				{
					"type": "image"
				},
				{
					"type": "image"
				},
				{
					"type": "image"
				}
			]
		}
	]
}
{% endschema %}
