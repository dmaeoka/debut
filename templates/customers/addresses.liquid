<!-- templates/customers/addresses.liquid -->
{% paginate customer.addresses by 5 %}
<div class="container pb-12">
	<div class="flex flex-col items-center">
		<div class="md:w-1/2 w-full">
			<header class="my-12">
				<h1 class="font-semibold mb-4 text-4xl tracking-wide text-center">{{ 'customer.addresses.title' | t }}</h1>
				<p><a href="{{ routes.account_url }}">{{ 'customer.account.return' | t }}</a></p>
				<p><button type="button" class="btn address-new-toggle" id="AddressNewButton" aria-expanded="false" aria-owns="AddressNewForm">{{ 'customer.addresses.add_new' | t }}</button></p>
			</header>
			{% comment %}
				Add address form, hidden by default
			{% endcomment %}

			<div
				id="AddressNewForm"
				class="mt-8 hidden">
				{% form 'customer_address', customer.new_address %}
					<h2 class="font-semibold leading-snug text-2xl tracking-wide mb-3">{{ 'customer.addresses.add_new' | t }}</h2>

					<div class="flex flex-row">
						<div class="md:w-1/2">
							<label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
							<input
								type="text"
								id="AddressFirstNameNew"
								name="address[first_name]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.first_name }}"
								autocomplete="given-name">
						</div>

						<div class="md:w-1/2">
							<label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
							<input
								type="text"
								id="AddressLastNameNew"
								name="address[last_name]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.last_name }}"
								autocomplete="family-name">
						</div>
					</div>

					<div class="flex flex-row">
						<div>
							<label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
							<input
								type="text"
								id="AddressCompanyNew"
								name="address[company]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.company }}"
								autocomplete="organization">
						</div>
						<div>
							<label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
							<input
								type="text"
								id="AddressAddress1New"
								name="address[address1]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.address1 }}"
								autocomplete="street-address address-line1">
						</div>
						<div>
							<label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
							<input
								type="text"
								id="AddressAddress2New"
								name="address[address2]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.address2 }}"
								autocomplete="street-address address-line2">
						</div>
					</div>

					<div class="flex flex-row">
						<div class="md:w-1/2">
							<label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
							<input
								type="text"
								id="AddressCityNew"
								name="address[city]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								value="{{ form.city }}"
								autocomplete="address-level2">
						</div>

						<div class="md:w-1/2">
							<label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
							<select
								id="AddressCountryNew"
								name="address[country]"
								class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
								data-default="{{ form.country }}"
								autocomplete="country">{{ all_country_option_tags }}</select>
						</div>
					</div>

					<div id="AddressProvinceContainerNew" style="display:none">
						<label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
						<select
							id="AddressProvinceNew"
							name="address[province]"
							class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
							data-default="{{ form.province }}"
							autocomplete="address-level1"></select>
					</div>
					<div>
						<label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
						<input
							type="text"
							id="AddressZipNew"
							name="address[zip]"
							class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
							value="{{ form.zip }}"
							autocapitalize="characters" autocomplete="postal-code">
					</div>
					<div>
						<label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
						<input
							type="tel"
							id="AddressPhoneNew"
							name="address[phone]"
							class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
							value="{{ form.phone }}"
							autocomplete="phone">
					</div>
					<div>
						{{ form.set_as_default_checkbox }}
						<label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
					</div>

					<div>
						<input type="submit" class="bg-red-600 border-red-600 btn text-white text-base" value="{{ 'customer.addresses.add' | t }}">
						<button type="button" class="btn border-red-600 mr-2 bg-transparent text-red-500">{{ 'customer.addresses.cancel' | t }}</button>
					</div>

				{% endform %}
			</div>

			{% comment %}
				List all customer addresses with a unique edit form.
				Also add pagination in case they have a large number of addresses
			{% endcomment %}
			<ul>
				{% for address in customer.addresses %}
					<li>
						<div class="address">
							{% if address == customer.default_address %}
								<h2 class="font-semibold leading-snug text-2xl tracking-wide mb-3">{{ 'customer.addresses.default' | t }}</h2>
							{% endif %}

							{{ address | format_address }}

							<ul class="flex flex-no-wrap flex-row">
								<li>
									<button
										id="EditFormButton_{{ address.id }}"
										type="button"
										class="btn border-red-600 mr-2 bg-transparent text-red-500"
										data-form-id="{{ address.id }}"
										aria-owns="EditAddress_{{ address.id }}"
										aria-expanded="false"
									>
										{{ 'customer.addresses.edit' | t }}
									</button>
								</li>
								<li>
									<button
										type="button"
										class="btn border-red-600 mr-2 bg-transparent text-red-500"
										data-target="{{ address.url }}"
										data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
									>
										{{ 'customer.addresses.delete' | t }}
									</button>
								</li>
							</ul>
						</div>

						<div id="EditAddress_{{ address.id }}" class="form-vertical hidden">
							{% form 'customer_address', address %}

								<h2 class="font-semibold leading-snug text-2xl tracking-wide mb-3">{{ 'customer.addresses.edit_address' | t }}</h2>

								<div class="flex flex-row">
									<div class="md:w-1/2">
										<label for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }}</label>
										<input type="text"
											id="AddressFirstName_{{ form.id }}"
											name="address[first_name]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											value="{{ form.first_name }}"
											autocomplete="given-name">
									</div>
									<div class="md:w-1/2">
										<label for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t }}</label>
										<input
											type="text"
											id="AddressLastName_{{ form.id }}"
											name="address[last_name]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											value="{{ form.last_name }}"
											autocomplete="family-name">
									</div>
								</div>
								<div>
									<label for="AddressCompany_{{ form.id }}">{{ 'customer.addresses.company' | t }}</label>
									<input
										type="text"
										id="AddressCompany_{{ form.id }}"
										name="address[company]"
										class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
										value="{{ form.company }}"
										autocomplete="organization">
								</div>
								<div>
									<label for="AddressAddress1_{{ form.id }}">{{ 'customer.addresses.address1' | t }}</label>
									<input type="text"
										id="AddressAddress1_{{ form.id }}"
										name="address[address1]"
										class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
										value="{{ form.address1 }}"
										autocomplete="street-address address-line1">
								</div>
								<div>
									<label for="AddressAddress2_{{ form.id }}">{{ 'customer.addresses.address2' | t }}</label>
									<input
										type="text"
										id="AddressAddress2_{{ form.id }}"
										name="address[address2]"
										class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
										value="{{ form.address2 }}"
										autocomplete="street-address address-line2">
								</div>

								<div class="flex flex-row">
									<div class="md:w-1/2">
										<label for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label>
										<input
											type="text"
											id="AddressCity_{{ form.id }}"
											name="address[city]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											value="{{ form.city }}"
											autocomplete="address-level2">
									</div>
									<div class="md:w-1/2">
										<label for="AddressCountry_{{ form.id }}">{{ 'customer.addresses.country' | t }}</label>
										<select
											id="AddressCountry_{{ form.id }}"
											class="address-country-option"
											data-form-id="{{ form.id }}"
											name="address[country]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											data-default="{{ form.country }}"
											autocomplete="country">{{ all_country_option_tags }}</select>
									</div>
								</div>

								<div id="AddressProvinceContainer_{{ form.id }}" style="display:none">
									<label for="AddressProvince_{{ form.id }}">{{ 'customer.addresses.province' | t }}</label>
									<select
										id="AddressProvince_{{ form.id }}"
										name="address[province]"
										class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
										data-default="{{ form.province }}"
										autocomplete="address-level1"></select>
								</div>

								<div class="flex flex-row">
									<div>
										<label for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
										<input
											type="text"
											id="AddressZip_{{ form.id }}"
											name="address[zip]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											value="{{ form.zip }}"
											autocapitalize="characters"
											autocomplete="postal-code">
									</div>

									<div>
										<label for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
										<input
											type="tel"
											id="AddressPhone_{{ form.id }}"
											name="address[phone]"
											class="bg-white border border-gray-600 px-3 py-2 text-gray-800 w-full rounded"
											value="{{ form.phone }}"
											autocomplete="phone">
									</div>
								</div>

								<div class="text-center">
									{{ form.set_as_default_checkbox }}
									<label for="address_default_address_{{ form.id }}">{{ 'customer.addresses.set_default' | t }}</label>
									<div><input type="submit" class="bg-red-600 border-red-600 btn text-white text-base" value="{{ 'customer.addresses.update' | t }}"></div>
									<div><button type="button" class="text-link" data-form-id="{{ form.id }}">{{ 'customer.addresses.cancel' | t }}</button></div>
								</div>

							{% endform %}
							<hr>
						</div>
					</li>
				{% endfor %}
			</ul>

			{%- if paginate.pages > 1 -%}
				{% include 'pagination', paginate: paginate %}
			{%- endif -%}
		</div>
	</div>
</div>

{% endpaginate %}
