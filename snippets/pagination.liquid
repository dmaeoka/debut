<!-- snippets/pagination.liquid -->
{% comment %}
	Renders a pagination bar

	Accepts:
	- paginate: {Object} Paginate Liquid object (required)

	Usage:
	{% render 'pagination', paginate: paginate %}
{% endcomment %}
<ul class="flex justify-center list-none py-10 text-center">
	{% unless paginate.previous.is_link %}
		<li aria-hidden="true">
			<button class="btn opacity-50 cursor-default px-4 py-3" disabled>
				{% render 'icon-arrow-left', icon_class: "h-3 w-3 align-middle" %}
				<span class="sr-only">{{ 'general.pagination.previous' | t }}</span>
			</button>
		</li>
		{% else %}
		<li>
			<a href="{{ paginate.previous.url }}" class="btn px-4 py-3">
				{% render 'icon-arrow-left', icon_class: "h-3 w-3 align-middle" %}
				<span class="sr-only">{{ 'general.pagination.previous' | t }}</span>
			</a>
		</li>
	{% endunless %}
	<li class="px-4 self-center text-sm text-black">
		{{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}
	</li>
	{% unless paginate.next.is_link %}
		<li aria-hidden="true">
			<button class="btn opacity-50 cursor-default px-4 py-3" disabled>
				{% render 'icon-arrow-right', icon_class: "h-3 w-3 align-middle" %}
				<span class="sr-only">{{ 'general.pagination.next' | t }}</span>
			</button>
		</li>
	{% else %}
		<li>
			<a href="{{ paginate.next.url }}" class="btn px-4 py-3">
				{% render 'icon-arrow-right', icon_class: "h-3 w-3 align-middle" %}
				<span class="sr-only">{{ 'general.pagination.next' | t }}</span>
			</a>
		</li>
	{% endunless %}
</ul>
